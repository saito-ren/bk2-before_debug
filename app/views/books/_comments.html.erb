<% book_comments.each do |c| %>
	<tr>
		<td>
			<%= link_to user_path(c.user) do %>
				<%= attachment_image_tag(book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
			<%= c.user.name %>
			<% end %>
		</td>
		<td>
			<%= c.comment %>
		</td>
		<% if current_user.id == c.user_id %>
		<td><%= link_to "Destroy", book_book_comment_path(book, c), method: :delete, remote:true, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{book.id}" %>
		</td>
		<% end %>
	</tr>
	<% end %>