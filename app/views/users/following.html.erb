<h3>Follow Users</h3>
<% if @users.count > 0 %>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @user.following_user.each do |user| %>
    <tr>
      <td><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
      <td><%= user.name %> </td>
      <td>フォロー数：<%= user.follower.count %></td>
      <td>フォロワー数：<%= user.followed.count %></td>
      <td><%= link_to 'show', user_path(user) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<p>ユーザーはいません</p>
<% end %>